<h1>React Items</h1>

<%= link_to 'Create new portfolio item', new_portfolio_path if logged_in?(:site_admin) %>

<% @portfolio_item.each do |item| %>
  <p><%= link_to item.title, portfolio_show_path(item.id) %></p>
  <p><%= item.subtitle %></p>
  <p><%= item.body %></p>
  <%= image_tag item.thumb_image unless item.thumb_image.nil? %>
  <%= link_to 'Edit', edit_portfolio_path(item) if logged_in?(:site_admin) %>
  <%= link_to 'Delete Item', portfolio_path(item), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin)  %>
<% end %>